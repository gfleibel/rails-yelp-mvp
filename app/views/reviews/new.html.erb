    <img src="https://img.freepik.com/premium-vector/restaurant-logo-with-square-design_579179-2696.jpg?w=2000" width="30" height="30" class="me-2 rounded d-inline-block align-top" alt="">
    Yelp MVP
  </a>
</nav>

<div class="container p-5">
  <h1>Add new review for <%= @restaurant.name %></h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
   <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
      <%= f.input :rating, collection: Restaurant::CATEGORY %>
      <%= f.input :content %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
