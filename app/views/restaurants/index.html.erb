<nav class="navbar navbar-dark bg-primary ps-5">
  <a class="navbar-brand" href="/restaurants">
    <img src="https://img.freepik.com/premium-vector/restaurant-logo-with-square-design_579179-2696.jpg?w=2000" width="30" height="30" class="me-2 rounded d-inline-block align-top" alt="">
    Yelp MVP
  </a>
</nav>


<div class="container p-5">
  <div class="d-flex justify-content-between mb-3">
    <div>
      <h1 class="mb-0">My favorite restaurants</h1>
    </div>
    <div class="pt-2">
      <%= link_to "+ Add new restaurant", new_restaurant_path, class: "btn btn-success"%>
    </div>
  </div>


  <% @restaurants.each do |restaurant| %>
  <div class="card mb-2">
    <div class="card-body d-flex justify-content-between align-items-center">
      <p class="mb-0"><%= restaurant.name %></p>
      <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
    </div>
  </div>
  <% end %>
</div>
